---
import Navigation from "../components/Navigation.astro";
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";
import restaurant from "../assets/images/restaurant.avif";
import photo from "../assets/images/photo.avif";
import un from "../assets/images/un.avif";
import "../CSS/font.css";
import deux from "../assets/images/deux.avif";
import drei from "../assets/images/drei.avif";
import vier from "../assets/images/vier.webp";
---

<Layout>
